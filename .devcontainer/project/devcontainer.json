// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "codespace-spark-cluster-headnode",
	"image": "mcr.microsoft.com/devcontainers/python:0-3.11",

	"onCreateCommand": "pip3 install --upgrade pip && pip3 install --user -r requirements.txt",
	"customizations": {
	  "vscode": {
		"settings": {"jupyter.kernels.excludePythonEnvironments": ["/usr/bin/python3"]},
		"extensions": [
		  "-dbaeumer.vscode-eslint",
		  "ms-python.python",
		  "ms-toolsai.jupyter",
		  "streetsidesoftware.code-spell-checker"
		]
	  }
	},
	
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [8080],

	// Set name for forwared ports
	"portsAttributes": {
		"8080": {
			"label": "sparkUI"
		}
	},
	
	// Get spark and set it up when the container is created
	"onCreateCommand": ".devcontainer/get_spark.sh",
	
	// Start Spark whenever we attach to the container, and leave htop running in a terminal
	"postAttachCommand": "sudo /opt/spark/sbin/start-master.sh --port 7077 --host 0.0.0.0 && htop"
}
