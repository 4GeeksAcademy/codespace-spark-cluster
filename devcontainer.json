// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "codespace-spark-cluster-headnode",
	"image": "mcr.microsoft.com/devcontainers/python:0-3.11",
	//"onCreateCommand": "pip3 install --upgrade pip && pip3 install --user -r requirements.txt",
	"customizations": {
	  "vscode": {
		"settings": {},
		"extensions": []
	  }
	},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "curl https://dlcdn.apache.org/spark/spark-3.5.5/spark-3.5.5-bin-hadoop3.tgz --output /tmp/spark.tgz",
    	"postCreateCommand": "mkdir /opt/spark",
    	"postCreateCommand": "tar -xf /tmp/spark.tgz -C /opt/spark"
}
